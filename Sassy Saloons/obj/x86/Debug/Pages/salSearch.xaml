<Page x:ConnectionId='1'
    x:Class="Sassy_Saloons.Pages.salSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:data="using:Sassy_Saloons.Models" 
                        
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        
        <Button x:ConnectionId='2' x:Name="saloon"                     
                VerticalAlignment="Top" HorizontalAlignment="Center"
                Width="200" Height="30" Content="saloon"/>
        
        <Button x:ConnectionId='3' x:Name="user"                    
                Style="{StaticResource buttonStyle}"
                Grid.Row="1" Content=""/>

        <ListView x:ConnectionId='4' x:Name="saloonsSearched" HorizontalAlignment="Center"
                  ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden"
                  IsItemClickEnabled="True" Margin="0,50,0,0"
                                                        
                                                                     >

            <ListView.ItemTemplate>

                <DataTemplate                               >
                    
                    <StackPanel x:ConnectionId='6' Margin="0,0,0,30" >
                        <TextBlock x:ConnectionId='7' x:Name="salonBlock" 
                               VerticalAlignment="Center"
                               FontSize="30"                           />

                        <TextBlock x:ConnectionId='8' x:Name="usernameBlock" 
                                   VerticalAlignment="Center"  
                                   Visibility="Collapsed"
                                   FontSize="30"                          />
                        
                    </StackPanel>

                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <TextBlock x:ConnectionId='5' x:Name="gimmeProfile" Visibility="Collapsed"
                   Text="{Binding ElementName=saloonsSearched, Path=SelectedItem.usernameBlock}"/>
    </Grid>
</Page>

