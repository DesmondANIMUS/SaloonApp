<Page x:ConnectionId='1'
    x:Class="Sassy_Saloons.Pages.salProfile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.2*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Ellipse x:ConnectionId='2' x:Name="userPic" >
            <Ellipse.Fill>
                <ImageBrush Stretch="Uniform" 
                            ImageSource="ms-appx:///Assets/sci.jpg"/>
            </Ellipse.Fill>
        </Ellipse>

        <TextBlock x:ConnectionId='3' x:Name="NameBlock" Grid.Column="1"
                   VerticalAlignment="Center" TextAlignment="Center"
                   Text="Name" FontSize="30"
                   Margin="0,0,0,0"/>

        <TextBlock Grid.Row="1" Text="City:" VerticalAlignment="Top"
                   TextAlignment="Center" FontSize="30"
                   Margin="0,10,0,0"/>

        <TextBlock Grid.Row="1" Text="State:" VerticalAlignment="Center"
                   TextAlignment="Center" FontSize="30"/>

        <TextBlock Grid.Row="1" Text="Pin:" VerticalAlignment="Bottom"
                   TextAlignment="Center" FontSize="30"
                   Margin="0,0,0,10"/>

        <TextBlock x:ConnectionId='4' x:Name="CityBlock" Grid.Column="1"
                   Grid.Row="1" Text="City" VerticalAlignment="Top"
                   TextAlignment="Center" FontSize="30"
                   Margin="0,10,0,0"/>

        <TextBlock x:ConnectionId='5' x:Name="StateBlock" Grid.Column="1"
                   Grid.Row="1" Text="State" VerticalAlignment="Center"
                   TextAlignment="Center" FontSize="30"/>

        <TextBlock x:ConnectionId='6' x:Name="PinBlock" Grid.Column="1" Margin="0,0,0,10"
                   Grid.Row="1" Text="ThisPin" VerticalAlignment="Bottom"
                   TextAlignment="Center" FontSize="30"/>

        <Button x:ConnectionId='7' x:Name="moreButton" Style="{StaticResource buttonStyle}"
                Grid.Row="2" Background="Teal" Foreground="White"
                Content=""                         
                Grid.ColumnSpan="2" HorizontalAlignment="Center"/>

        <Button x:ConnectionId='8' x:Name="commentButton" Style="{StaticResource buttonStyle}"
                Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right"
                Content=""                            />

        <Button x:ConnectionId='9' x:Name="searchButton" Style="{StaticResource buttonStyle}"
                Grid.Row="2" HorizontalAlignment="Left"
                Content=""                           />

    </Grid>
</Page>

